@model DoAnNhom1.Models.Info

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Chỉnh sửa thông tin</h2>
@using (Html.BeginForm("Edit", "Infoes", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
{

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    Tên vùng
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Nội dung
                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Hình ảnh
                    <img src="@Url.Content(Session["imgPath"].ToString())" class="img-fluid" id="previewImg" />
                    <input type="file" name="UploadImage" class="form-control-file" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>
<script src="~/Scripts/script.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
