                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Learn/Index">Thông Tin Thêm</a>
                            </li>
                        </ul>
                        @using (Html.BeginForm("SearchP", "SearchPage", FormMethod.Get, new { @class = "searchbar form-inline " }))
                        {
                            <form class="form-inline my-2 my-lg-0 ">
                                @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "searchinput form-searchpage white-btn btn-light my-2 my-sm-0" })
                                <button class="white-btn btn-primary my-2 my-sm-0">
                                    <i class="fa-solid fa-magnifying-glass" style="color: black;"></i>
                                </button>
                            </form>
                        }
                        @if (Session["NameUser"] == null)
                        {
                            <form class="form-inline my-2 my-lg-0 pr-4">
                                <button class="blue-btn btn-primary my-2 my-sm-0">
                                    @Html.ActionLink("Đăng Nhập", "Index", "Login", null,@*new { @class = "Blue" },*@new { Style = "color:#ffffff;text-decoration:none" })
                                </button>
                            </form>
                        }
                        @if (Session["NameUser"] != null)
                        {
                            <div class="dropdown visible">
                                <a class="nav-link dropdown-toggle " href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img class="img-fluid bg-light ml-3" src="~/image/us.png" alt="Alternate Text" width="50" style="margin-left:2px;"/>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
