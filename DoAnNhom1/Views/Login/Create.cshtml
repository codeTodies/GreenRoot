@model DoAnNhom1.Models.AdminUser

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<link rel="stylesheet" href="~/Content/assets/Login.css">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<body>
    <div class="wrapper">
        @using (Html.BeginForm("Create", "Login"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form action="">
                <h1>Đăng ký</h1>
                <div class="input-box">
                    @Html.TextBox("NameUser", null, new { @class = "form-control input_user", placeholder = "Tên đăng nhập" })
                    <i class='bx bxs-user'></i>
                    <div>
                        @Html.ValidationMessageFor(model => model.NameUser)
                    </div>
                </div>

                <div class="input-box">
                    @Html.Password("PasswordUser", null, new { @class = "form-control input_pass", placeholder = "Mật khẩu" })
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <div>
                    @Html.ValidationMessageFor(model => model.PasswordUser)
                </div>
                <div class="input-box">
                    @Html.Password("ConfirmPassword", null, new { @class = "form-control input_pass", placeholder = "Xác nhận mật khẩu" })
                    <i class='bx bxs-lock-alt'></i>
                    <div>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>
                <button type="submit" class="btn login_btn">Đăng ký</button>
                <div class="register-link">
                    <p>Đã Có tài khoản ? <a href="~/Login/Index">Đăng nhập</a></p>
                </div>
            </form>
        }
    </div>
</body>


<script>
            $('.message a').click(function () {
                $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
            });
</script>

