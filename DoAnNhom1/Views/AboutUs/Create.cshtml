@model DoAnNhom1.Models.AboutUs

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2 class="text-center">TẠO NHÂN VẬT</h2>


@using (Html.BeginForm("Create", "AboutUs", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    Tên tác giả
                    @Html.EditorFor(model => model.NameUs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameUs, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Chức vụ tác giả
                    @Html.EditorFor(model => model.RoleUs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RoleUs, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Mô tả lời nhắn
                    @Html.EditorFor(model => model.DescriptionUs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DescriptionUs, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    Hình ảnh
                    <div class="input-group">
                        <img src="@Url.Content(Model.ImgUs)" class="img-fluid" id="previewImg" width="200" height="150" />
                        <input type="file" name="UploadImage" class="form-control-file" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
                        @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
</div>
<script src="~/Scripts/script.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
